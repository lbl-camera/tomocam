
{
    "version": 6,
    "configurePresets": [
        {
            "name": "debug",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/Serial/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ENABLE_PYTHON": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "release",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/Serial/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ENABLE_PYTHON": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "multiproc-debug",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/Multiproc/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "MULTI_PROC": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ENABLE_PYTHON": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        },
        {
            "name": "multiproc-release",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/Multiproc/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "ENABLE_TESTS": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "MULTI_PROC": {
                    "type": "BOOL",
                    "value": "ON"
                },
                "ENABLE_PYTHON": {
                    "type": "BOOL",
                    "value": "ON"
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug",
            "jobs": 8
        },
        {
            "name": "release",
            "configurePreset": "release",
            "jobs": 8
        },
        {
            "name": "multiproc-debug",
            "configurePreset": "multiproc-debug",
            "jobs": 8
        },
        { 
            "name": "multiproc-release",
            "configurePreset": "multiproc-release",
            "jobs": 8
        }
    ],
    "workflowPresets": [
        {
            "name": "debug",
            "steps": [
                { "name": "debug", "type": "configure" },
                { "name": "debug", "type": "build" }
            ]
        },
        {
            "name": "release",
            "steps": [
                { "name": "release", "type": "configure" },
                { "name": "release", "type": "build" }
            ]
        },
        {
            "name": "multiproc-debug",
            "steps": [
                { "name": "multiproc-debug", "type": "configure" },
                { "name": "multiproc-debug", "type": "build" }
            ]
        },
        {
            "name": "multiproc-release",
            "steps": [
                { "name": "multiproc-release", "type": "configure" },
                { "name": "multiproc-release", "type": "build" }
            ]
        }
    ]
}
